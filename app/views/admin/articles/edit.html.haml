.container.edit-article
  .row
    .col-md-3
      标题：
    .col-md-9
      = hidden_field_tag 'save_url', admin_article_path(@article.id)
      %div{id: 'title', "data-mercury" => "full"}
        = raw(@article.title)
  .row
    .col-md-3
      摘要：
    .col-md-9
      %div{id: 'desc', "data-mercury" => "full"}
        = raw(@article.desc)
  .row
    .col-md-3
      原文链接：
    .col-md-9
      = @article.source_link
  .row
    .col-md-3
      原文发表日期：
    .col-md-9
      = @article.publish_date
  .row
    .col-md-3
      原文作者：
    .col-md-9
      = @article.author
  .row
    .col-md-12
      %div{id: 'content', "data-mercury" => "full"}
        %p= raw(@article.content)
  .row
    .col-md-3
      %form{action: publish_admin_article_path(@article.id), method: :post}
        %button{type: "submit", class: "btn btn-warning", id: "publish_article"} 发布文章
  .row
    .col-md-3
      %a{href: admin_articles_path} 返回文章列表