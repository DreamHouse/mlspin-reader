.container.edit-article
  .row
    .col-md-3
      标题：
    .col-md-9
      = hidden_field_tag 'save_url', admin_article_path(@article.id)
      %div{id: 'title', "data-mercury" => "full"}
        = @article.title
  .row
    .col-md-3
      摘要：
    .col-md-9  
      = @article.desc
  .row
    .col-md-3
      原文链接：
    .col-md-9
      = @article.source_link
  .row
    .col-md-3
      原文发表日期：
    .col-md-9
      = @article.publish_date
  .row
    .col-md-3
      原文作者：
    .col-md-9
      = @article.author
  .row
    .col-md-12
      %div{id: 'content', "data-mercury" => "full"}
        %p= raw(@article.content)
    