.container.edit-article
  = form_tag(admin_article_path(@article.id), :method => :put) do
    .row
      .col-md-3
        标题：
      .col-md-9
        = text_field_tag 'title', @article.title
    .row
      .col-md-3
        摘要：
      .col-md-9
        = cktext_area 'desc', '', :value => @article.desc, :class => 'someclass', :ckeditor => {:language => 'zh'}
    .row
      .col-md-3
        原文链接：
      .col-md-9
        = @article.source_link
    .row
      .col-md-3
        原文发表日期：
      .col-md-9
        = @article.publish_date
    .row
      .col-md-3
        原文作者：
      .col-md-9
        = @article.author
    .row
      .col-md-3
        内容：
      .col-md-9
        = cktext_area 'content', '', :value => @article.content, :class => 'someclass', :ckeditor => {:language => 'zh'}
    .row
      .col-md-3
        %button{type: "submit", class: "btn btn-warning", id: "save_article"} 保存
  = form_tag(publish_admin_article_path(@article.id), :method => :post) do
    .row
      .col-md-3
        %button{type: "submit", class: "btn btn-warning", id: "publish_article"} 发布文章
    .row
      .col-md-3
        %a{href: admin_articles_path} 返回文章列表