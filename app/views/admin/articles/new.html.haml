.container.create-article
  = form_tag(admin_articles_path, :method => :post) do
    .row
      .col-md-3
        标题：
      .col-md-9
        = text_field_tag 'title'
    .row
      .col-md-3
        摘要：
      .col-md-9  
        = cktext_area 'desc', '', :class => 'someclass', :ckeditor => {:language => 'zh'}
    .row
      .col-md-3
        原文链接：
      .col-md-9
        = text_field_tag 'source_link'
    .row
      .col-md-3
        原文发表日期('YYYY-MM-DD')：
      .col-md-9
        = text_field_tag 'publish_date', '2014-01-01', class: 'short-field'
    .row
      .col-md-3
        原文作者：
      .col-md-9
        = text_field_tag 'author', nil, class: 'short-field'
    .row
      .col-md-3
        正文：
      .col-md-9  
        = cktext_area 'content', '', :class => 'someclass', :ckeditor => {:language => 'zh'}
    .row
      .col-md-3
        %button{type: "submit", class: "btn btn-warning"} 保存
      .col-md-9
        %a{href: admin_articles_path} 返回文章列表