.container.create-article
  %form{action: admin_articles_path, method: :post}
    .row
      .col-md-3
        标题：
      .col-md-9
        = text_field_tag 'title'
    .row
      .col-md-3
        摘要：
      .col-md-9  
        = text_area_tag 'desc'
    .row
      .col-md-3
        原文链接：
      .col-md-9
        = text_field_tag 'source_link'
    .row
      .col-md-3
        原文发表日期('MM/DD/YYYY')：
      .col-md-9
        = text_field_tag 'publish_date', '01/01/2014', class: 'short-field'
    .row
      .col-md-3
        原文作者：
      .col-md-9
        = text_field_tag 'author', nil, class: 'short-field'
    .row
      .col-md-2
        %button{type: "submit", class: "btn btn-warning"} 下一步：编辑正文
    